<!-- src/views/recipes/recipes.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Recipes</title>
</head>
<body>
<%- include('../partials/header') %>

<div class="container mt-5">
    <h1>Recipes</h1>
    <form action="/recipes" method="GET" class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" name="food" placeholder="Search for a recipe..." aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
    <div class="row">
        <% recipes.results.forEach(recipe => { %>
            <div class="col-12 mb-3">
                <div class="card flex-row">
                    <% if (recipe.image) { %>
                        <img src="<%= recipe.image %>" class="card-img-left img-fluid" alt="<%= recipe.title %>" style="width: 200px; height: auto;">
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title"><%= recipe.title %></h5>
                        <% if (recipe.dishTypes) { %>
                            <p class="card-text"><strong>Dish Types:</strong> <%= recipe.dishTypes.join(', ') %></p>
                        <% } %>
                        <% if (recipe.readyInMinutes) { %>
                            <p class="card-text"><strong>Ready in:</strong> <%= recipe.readyInMinutes %> minutes</p>
                        <% } %>
                        <a href="/recipes/<%= recipe.id %>" class="btn btn-primary">View Recipe</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<%- include('../partials/footer')%>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.4.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
