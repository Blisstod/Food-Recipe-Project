<!-- src/views/recipes/recipe-details.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title><%= recipeDetails.title %></title>
</head>
<body>
    <div class="container mt-5">
        <h1 class="display-4"><%= recipeDetails.title %></h1>
        <% if (recipeDetails.image) { %>
            <img src="<%= recipeDetails.image %>" class="img-fluid" alt="<%= recipeDetails.title %>">
        <% } %>
        <h3 class="mt-3">Ingredients</h3>
        <ul>
            <% recipeDetails.extendedIngredients.forEach(ingredient => { %>
                <li><%= ingredient.original %></li>
            <% }) %>
        </ul>
        <h3 class="mt-3">Instructions</h3>
        <% if (recipeDetails.instructions) { %>
            <p><%= recipeDetails.instructions %></p>
        <% } else { %>
            <p>No instructions provided.</p>
        <% } %>
        <!-- Add more details as needed -->
    </div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.4.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>